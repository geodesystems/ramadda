<types category="Information">

  <type name="notes_notebook"  description="Notebook" handler="org.ramadda.plugins.notes.NotebookTypeHandler" >
     <property name="icon" value="/notes/notebook.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.resource.show" value="false"/>
</type>


  <type name="notes_note"  description="Note" handler="org.ramadda.plugins.notes.NoteTypeHandler" >
     <property name="icon" value="/icons/note.gif"/>
     <property name="form.name.label" value="Subject"/>
     <property name="form.description.label" value="Note"/>
     <property name="form.area.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.resource.show" value="false"/>
<!--
     <column name="category" iscategory="true"  type="enumerationplug" label="Category" cansearch="true" showinhtml="true"/>
-->
     <wiki><![CDATA[
{{noheading}}
+section # title="{{name}}"
+note
{{description wikify="true"}}
-section
-note
]]>
</wiki>


</type>


  <type name="notes_jsonfile"  description="Json File" handler="org.ramadda.plugins.notes.JsonFileTypeHandler" >
     <property name="icon" value="/icons/json.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <wiki_inner><![CDATA[
+section title={{name}}
{{description wikify="true"}}
{{json.view wikify="false"}}
-section
]]>
</wiki_inner>
</type>


