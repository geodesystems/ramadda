<types   category="Imagery">

  <type name="beforeafterbase"  foruser="false" handler="org.ramadda.plugins.beforeafter.BeforeAfterBase" >
     <property name="icon" value="/icons/jpeg.png"/>
     <property name="form.description.rows" value="5"/>
     <property name="form.resource.show" value="false"/>
<!--
     <column name="display_type" type="enumeration"  values="beforafter,imageoverlay" label="Display Type" />
-->
  </type>

  <type name="beforeafter"  super="beforeafterbase" description="Before and After Images" >
     <property name="form.resource.show" value="false"/>
     <column name="image_width" type="string" label="Optional image width" columns="5" default="800"/>
     <wiki><![CDATA[
+section title={{name}} 
{{description wikify="true"}}
{{beforeafter}}
----
{{links message="" prefix="Images"}}
-section
]]>
     </wiki>
</type>


  <type name="type_imageoverlay"  super="beforeafterbase" description="Image Overlay"  >
     <column name="image_width" type="string" label="Optional image width" columns="5" default="800"/>
     <wiki><![CDATA[
+section title={{name}} 
{{description wikify="true"}}
{{imageoverlay}}
----
{{links message="" prefix="Images"}}
-section
]]>
     </wiki>
</type>




</types>
