<types>
  <type name="type_document_tika"  foruser="false" description="TIKA Doc"  super="type_document" handler="org.ramadda.plugins.media.TikaTypeHandler"  metadata="enum_tag,metadata_author,metadata_publisher">
<!--
     <service link="media_pdfbox_extracttext"/>
-->
     <service link="tika_extracttext"/>
     <!--
     <service link="media_pdfbox_thumbnail" target="attachment"/>
-->
     <service link="media_gs_thumbnail" target="attachment"/>
     <wiki><![CDATA[
+section # title="{{name}}"
{{information showTitle="false" details="true"}}
:heading Description
{{description wikify="true"}}
-section
]]>
</wiki>
</type>



  <type name="type_document_pdf"  description="PDF File" pattern=".*\.pdf" super="type_document_tika">
<!--
     <service link="media_pdfbox_extracttext"/>
-->
     <property name="icon" value="/icons/pdf.png"/>
     <xwiki><![CDATA[
+section # title="{{name}}"
{{description wikify="true"}}
----
<embed src="{{resource url=true}}" type="application/pdf" width="100%" height="600">
</embed>
----
{{information}}
-section
]]>
</xwiki>

</type>

  <type name="type_document_doc"  description="Word File" pattern="(.*\.doc|.*\.docx)"  super="type_document_tika"         handler="org.ramadda.data.docs.MsDocTypeHandler" priority="10" >
     <property name="icon" value="/icons/doc.png"/>
</type>

  <type name="type_document_ppt"  description="Powerpoint File" pattern="(.*\.ppt|.*\.pptx)"  super="type_document_tika"   handler="org.ramadda.data.docs.MsDocTypeHandler" priority="10" >
     <property name="icon" value="/icons/ppt.png"/>
</type>



  <type name="media_youtubevideo"  
        description="YouTube Video" 
        handler="org.ramadda.plugins.media.YouTubeVideoTypeHandler" 
        category="Media" 
        pattern="^(http|https)://www.youtube.com/(watch\?v=|v/).*">
     <property name="icon" value="/media/youtube.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.file.show" value="false"/>
     <property name="form.url.label" value="YouTube Video URL"/>
     <column name="video_id" type="string" label="Video ID" showinhtml="false" editable="false"/>

     <column name="width" type="int" label="Width"  default="640" showinhtml="false"/>
     <column name="height" type="int" label="Height"  default="390" showinhtml="false"/>
     <column name="video_start" type="double" label="Start"  suffix="(minutes)" default="0" showinhtml="false"/>
     <column name="video_end" type="double" label="End"  suffix="(minutes)" default="-1" showinhtml="false"/>
     <column name="display" type="boolean" label="Display" default="true"  showinhtml="false"/>
     <column name="autoplay" type="boolean" label="Auto play" default="false"  showinhtml="false"/>
</type>


  <type name="media_video_channel"  description="Video Channel" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler" category="Media">
     <property name="icon" value="/media/folder-open-film.png"/>
     <property name="form.resource.show" value="false"/>
     <wiki><![CDATA[
+section  title={{name}}
{{description wikify="true"}}
{{grid columns="3"}}
-section
]]>
</wiki>
</type>


  <type name="media_audiofile"  
        description="Audio File" 
        handler="org.ramadda.plugins.media.AudioTypeHandler" 
        category="Documents" 
        pattern="(.*\.wav|.*\.m4a)">
     <property name="icon" value="/media/sound.png"/>
     <wiki><![CDATA[
+section title="{{name}}" #
{{noheading}}
{{audio}}

{{description wikify="true"}}

-section
]]>
</wiki>
</type>


  <type name="media_video"   foruser="false">
     <column name="width" type="int" label="Width"  default="640" showinhtml="false"/>
     <column name="height" type="int" label="Height"  default="390" showinhtml="false"/>
  </type>

  <type name="media_video_quicktime"  
        super="media_video"
        description="Quicktime Video" 
        handler="org.ramadda.plugins.media.QuicktimeTypeHandler" 
        category="Media" 
        pattern="(.*\.mov|.*\.mp4)">
     <property name="icon" value="/icons/mov.png"/>
     <column name="autoplay" type="boolean" label="Auto play" default="false"  showinhtml="false"/>
     <service link="media.qttools.thumbnail" id="initmov"  target="attachment"/>
     <wiki><![CDATA[
+section title="{{name}}" #
{{noheading}}
{{description wikify=true}}
{{video}}
-section
]]>
</wiki>
</type>


<type name="media_photoalbum"  description="Photo Album" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler" category="Media"
      help="A collection of images displayed as a photo album"      >
     <property name="icon" value="/media/pictures.png"/>
     <property name="form.resource.show" value="false"/>
     <wiki><![CDATA[
+section title="{{name}}" #
{{noheading}}
{{description}}
{{gallery columns="3"}}
-section
]]>
</wiki>
</type>


  <type name="media_imageloop"  description="Image Loop" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler" category="Media">
     <property name="form.resource.show" value="false"/>
     <property name="icon" value="/media/film.png"/>
     <wiki><![CDATA[
{{noheading}}
+section title={{name}}
{{description}}
{{imageplayer show_sort_links="true" imagewidth="90%"}}
-section
]]>
</wiki>
     <column name="autostart" type="boolean" label="Auto Start"  default="false" showinhtml="false"/>
     <column name="delay" type="int" label="Delay"  default="0" suffix="(milliseconds)" showinhtml="false"/>
</type>


  <type name="type_image"  description="Image" foruser="true" category="Media" pattern="(.*\.png|.*\.gif|.*\.jpg|.*\.jpeg)" handler="org.ramadda.plugins.media.ImageTypeHandler" priority="1" >
     <property name="icon" value="/icons/image.gif"/>
     <column   name="proxy" type="boolean" label="Proxy Image if URL"  showinhtml="false" default="false"/>
     <column   name="filename" label="Alternate filename"  showinhtml="false" />
</type>


<type name="type_360image"  super="type_image" description="360 Image" metadata="3d_label,content.alias" foruser="true" category="Media"
      help="Displays a 360 degree image"      >
     <property name="icon" value="/icons/image.gif"/>
     <column   name="rotation" label="Initial rotation" suffix="Pitch, rotation about the X-axis. Yaw, rotation about the Y-axis. Roll, rotation about the Z-axis."  showinhtml="false" />
     <wiki><![CDATA[
{{noheading}}
+section title={{name}}
{{description wikify=true}}
+inset top=10 left=10 bottom=10 right=10
+center
{{360image width="800px" height="400px"}}
+center
-inset
-section
]]>
</wiki>
</type>



  <type name="type_image_airport"  description="Airport Image" super="type_image" foruser="false" category="Media" >
     <property name="icon" value="/media/paper-plane.png"/>
</type>


  <type name="type_image_webcam"  description="Webcam" super="type_image" foruser="true" category="Media"  metadata="enum_tag,camera.direction">
     <property name="form.file.show" value="false"/>
     <property name="form.area.show" value="false"/>
     <property name="form.location.show" value="true"/>
 </type>


  <type name="type_document_html"  description="HTML File" pattern="(.*\.html|.*\.htm)" super="type_convertible" handler="org.ramadda.plugins.media.HtmlDocTypeHandler">
     <property name="icon" value="/icons/html.png"/>
     <column name="embed_type" type="enumeration" values="frame,full,partial,none" default="full" label="Embed style"  showinhtml="false"/>
</type>


  <type name="media_zoomify"  
        description="Zoomify" 
        handler="org.ramadda.plugins.media.ZoomifyTypeHandler" 
        category="Media" >
     <property name="icon" value="/icons/image.gif"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.file.show" value="false"/>
     <property name="form.url.show" value="false"/>
     <column name="image_width" type="int" label="Image Width"/>
     <column name="image_height" type="int" label="Image Height"/>     
     <column name="tiles_url" type="string" label="Tiles URL" />
     <column name="style" type="string" label="Style" rows="5"/>
     <wiki><![CDATA[
+section title={{name}}
{{description wikify=true}}
{{zoomify}}
]]>
</wiki>
</type>


<type name="type_document_vegalite"  description="Vega-Lite chart file" 
      handler="org.ramadda.plugins.media.VegaTypeHandler" 
      super="type_document_tabular" supercategory="" category="Data">
     <property name="icon" value="/media/vega.png"/>
     <wiki><![CDATA[
+section # title="{{name}}"
+accordian decorate=false collapsible=true activeSegment=-1
+segment Information
{{information showTitle="false" details="true"}}
-segment
-accordian
{{description wikify="true"}}
:heading Chart
{{vega.lite}}
-section
]]>
</wiki>


</type>


</types>
