</type>


<type name="type_360image"  super="type_image" description="360 Image" metadata="3d_label,content.alias" foruser="true" category="Media"
      help="Displays a 360 degree image"      >
     <property name="icon" value="/icons/image.png"/>
     <column   name="rotation" label="Initial rotation" suffix="Pitch, rotation about the X-axis. Yaw, rotation about the Y-axis. Roll, rotation about the Z-axis."  showinhtml="false" />
     <wiki><![CDATA[
{{noheading}}
+section title={{name}}
{{description wikify=true}}
+inset top=10 left=10 bottom=10 right=10
+center
{{360image width="100%" height="400px"}}
+center
-inset
-section
]]>
</wiki>
</type>



  <type name="type_image_airport"  description="Airport Image" super="type_image" foruser="false" category="Media" >
     <property name="icon" value="/media/paper-plane.png"/>
</type>


  <type name="type_image_webcam"  description="Webcam" super="type_image" foruser="true" category="Media"  metadata="enum_tag,camera.direction">
     <property name="form.file.show" value="false"/>
     <property name="form.area.show" value="false"/>
     <property name="form.location.show" value="true"/>
 </type>


  <type name="type_document_html"  description="HTML File" pattern="(.*\.html|.*\.htm)" super="type_document" handler="org.ramadda.plugins.media.HtmlDocTypeHandler">
     <property name="icon" value="/icons/html.png"/>
     <property name="convertidsinfile" value="true"/>
     <column name="embed_type" type="enumeration" values="none,embed,frame" default="full" label="Embed style"  showinhtml="false"/>
</type>


  <type name="media_zoomify"  
        description="Zoomable Image" 
