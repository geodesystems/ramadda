<types supercategory="Science and Education" category="NIST Reference Data" foruser="false">


  <type name="type_nist_constant"  description="CODATA Fundamental Physical Constants"    xhandler="org.ramadda.plugins.biz.FredCategoryTypeHandler">
     <property name="icon" value="/nist/nist.png"/>
     <property name="form.resource.show" value="false"/>
     <property name="search.form.date.show" value="false"/>
     <property name="search.form.area.show" value="false"/>

     <property name="template.label.sms" value="${name.short} - ${value.content} ${unit.content}"/>
     <property name="template.contents.sms" value="${name.short}&#10;Value: ${value.content}&#10;Unit: ${unit.content}&#10;Uncertainty: ${uncertainty.content} "/>

     <column name="value" type="double"  label="Value"  showinform="true" />
     <column name="uncertainty" type="double"  label="Uncertainty"  showinform="true" />
     <column name="unit" type="string"  label="Unit"  showinform="true" cansearch="true"/>

     <wiki><![CDATA[
