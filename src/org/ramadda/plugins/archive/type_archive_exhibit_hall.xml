<!-- 
Since this is for import add a:
<import resource="type_archive_exhibit_hall.xml"/>
into some types.xml file
-->
<types>
<type  name="type_archive_exhibit_hall" 
 description="Archive Exhibit Hall" 
 handler="org.ramadda.plugins.archive.ArchiveExhibitTypeHandler" 
 super="group" 
 supercategory="General" 
 category="Archive" 
childtypes="type_archive_exhibit"
edithelp="&lt;a target=_help href=_quote_{{root}}/archive/index.html#archive_exhibits_quote_&gt;Exhibit help&lt;/a&gt;"
>
<!-- Properties-->
<property name="record.file.class" value="org.ramadda.data.point.text.CsvFile"/>
<property  name="icon"  value="/archive/museum.png" />

<!-- Wiki text-->
<wiki><![CDATA[
+section title={{name}}
----
:vspace 1em
{{listing  showPlaceholderImage="true"  orderby="entryorder"
showDescription="true"  showSnippet="true"  #imageWidth="300px"  #textWidth="600px" 
 message=""  }} 
-section]]></wiki>
</type>
</types>
