<types 	priority="10" supercategory="General" category="Archive">

  <type name="type_archive_section"  description="Archive Section"
	handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler"  
	childtypes="type_archive_collection">

    <property name="icon" value="/archive/section.png"/>
    <property name="form.resource.show" value="false"/>
    <property name="form.date.show" value="false"/>    
    <property name="form.area.show" value="false"/>    
    <property name="form.tags.show" value="false"/>    
<wiki><![CDATA[
+section  title="{{typename}}: {{name}}"
+center
{{display_simplesearch width=200px  inputSize=100% 
ancestor=this 
placeholder="Search Section"
orderBy=createdate_ascending 
}}
-center
{{description wikify="true"}}
{{tabletree  message="" showSize="false"}} 
:vspace 1em
----
:vspace 1em
:heading Information
{{information  showDetails="true"  showTitle="false"   }} 
{{properties  message=""  metadata.types="!content.alias,!content.thumbnail,!content.license"
headingClass="formgroupheader" layout="linear"  includeTitle="true"  separator=""  decorate="false" 
inherited="false"  }} 
-section
]]>
</wiki>


</type>



  <type name="type_archive_collection"  description="Archive Collection"
	handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler"  
	childtypes="type_archive_series"
	newfields="name,description,_default"
	editfields="name,description,_default"	
	metadata="archive_source_contact,content.keyword,enum_tag,property,metadata_author,metadata_publisher">

    <property name="icon" value="/archive/collection.png"/>
    <property name="date.format" value="yyyy-MM-dd"/>
    <property name="form.resource.show" value="false"/>
    <property name="form.time.show" value="false"/>    
    <property name="date.nullok" value="true"/>
    <property name="html.type.show"  value="false" />
    <property name="form.ark.show" value="false"/>
    <property name="form.tags.show" value="false"/>    
    <column name="collection_number" type="string"  label="Collection Number" columns="8"
	    cansearch="false" group="Collection"/>
    <column name="oclc_number" type="string"  label="OCLC Number"   cansearch="false" columns="8"/>
    <column name="accession_number" type="string"  label="Accession Number"   cansearch="false" columns="8"/>
    <column name="location" type="string"  label="Location"   cansearch="false" columns="20"/>
    <column name="size" type="double"  label="Size" displaysuffix="Linear feet" default="0"
	    numberformat="#0.0"/>	    
        
    <column name="acquistion" size="2000" type="string"  rows="3" label="Acquisition"   cansearch="false" columns="80"/>
    <column name="terms" size="2000" type="string"  rows="3" label="Terms" suffix="Terms governing use"  cansearch="false" columns="80"/>
    <column name="citation" size="2000" type="string"  label="Citation" cansearch="false" columns="80"/>        

    <column name="publication_rights" rows="8" size="5000" type="string"  label="Publication Rights"   cansearch="false" columns="80"/>
    <column name="creator_sketch" size="5000" rows="8" type="string"  label="Creator Sketch"   cansearch="false" columns="80"/>
    <column name="scope_and_content" size="5000" rows="8" type="string"  label="Scope and Content Note"   cansearch="false" columns="80" />    


<!--
    <column name="author" type="string"  label="Author" cansearch="false" group="Metadata"/>
    <column name="institution" type="enumerationplus"  label="Institution" cansearch="false" columns="60"/>-->


<children><![CDATA[
<entries>
<entry  name="Series 1"  type="type_archive_series" id="series1"/>
<entry  name="File 1"  type="type_archive_file" parent="series1"/>
</entries>
]]>
</children>
<wiki><![CDATA[
+section  title="{{typename}}: {{name}}"
+center
{{display_simplesearch width=200px  inputSize=100% 
ancestor=this 
placeholder="Search"
orderBy=createdate_ascending 
}}
-center
+toggleopen Details
+row
+col-8
{{description wikify="true"}}
{{information  showDetails="true"  showTitle="false"   }} 
{{properties  message=""  metadata.types="!content.alias,!content.thumbnail,!content.license"
headingClass="formgroupheader" layout="linear"  includeTitle="true"  separator=""  decorate="false" 
inherited="false"  }} 
-col
+col-4
+center
{{ark short=true}}
{{image  message="" width="150px" style="margin-bottom:10px;"  useThumbnail="true"}}
-center
{{properties message="" inherited="true" metadata.types="content.license" includeTitle=false}}
:vspace 1em
{{mapentry hideIfNoLocations=true width="100%" height="200px"}}
:vspace 1em
{{list includeIcon="true" details="false" entries="siblings,links"  message="" box.maxheight="200"
xbox.class="entry-sidebox" prefix="====Related====" xblock.show="true" xblock.title="Related" xblock.open="false"}}
-col
-row
:vspace 1em
-toggle
----
:vspace 1em
:heading Contents
{{tabletree  message="" showSize="false"}} 
-section
]]>
</wiki>


</type>


  <type name="type_archive_series"  description="Archive Series"
	handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler"  
	childtypes="type_archive_file"
	newfields="name,description,_default"
	editfields="name,description,_default"	
	metadata="content.keyword,enum_tag,property,metadata_author,metadata_publisher">

    <property name="icon" value="/archive/series.png"/>
    <property name="form.description.iswiki" value="true"/>
    <property name="form.resource.show" value="false"/>
    <property name="form.ark.show" value="false"/>
    <property  name="html.type.show"  value="false" />
