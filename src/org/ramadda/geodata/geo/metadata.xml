<?xml version="1.0" encoding="ISO-8859-1"?>
<metadata>
  <handler category="Geo" 	searchable="true" browsable="true">

    <type id="geo_project" name="Geo Project"> 
      <element id="project" name="Project" datatype="enumerationplus" />
    </type>


    <type id="geo_site" name="Geo Site"> 
      <element id="site" name="Site" datatype="enumerationplus" />
    </type>
    

    <type id="geo_box_number" name="Geo Box Number"> 
      <element id="number" name="Box Number" datatype="enumerationplus"/>
    </type>


    <type id="geo_measurement" name="Geo Measurement"> 
      <element id="measurement" name="Measurement" datatype="enumerationplus"
	       values="file:/org/ramadda/geodata/geo/resources/measurements.txt"/>
    </type>

    <type id="geo_stratigraphy" name="Geo Stratigraphy"> 
      <element id="top" name="Top Unit" datatype="enumerationplus"
	       values="file:/org/ramadda/geodata/geo/resources/stratigraphy.txt"/>
      <element id="bottom" name="Bottom Unit" datatype="enumerationplus"
	       values="file:/org/ramadda/geodata/geo/resources/stratigraphy.txt"/>      
    </type>    
    
    <type id="geo_core_annotation" name="Geo Core Annotation"> 
      <element id="label" name="Label" datatype="string"/>
      <element name="Depth" datatype="int"/>
      <element name="Style" datatype="string" suffix="e.g., background:red;fontSize:20;fontStyle:italic;fontColor:white;"/>      <element name="Description" datatype="string" rows="5"/>
      
    </type>

    <type id="geo_core_legend" name="Geo Core Legend"> 
      <element name="Legend Image" datatype="file"/>
      <element name="Top" datatype="int"/>
      <element name="Bottom" datatype="int"/>      
    </type>    


  </handler>


</metadata>
